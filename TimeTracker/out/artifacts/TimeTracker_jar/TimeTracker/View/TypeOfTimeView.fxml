<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.saumlaki.time_tracker.controllers.TypeOfTimeController">
   <children>
      <VBox>
         <children>
            <Label prefHeight="25.0" prefWidth="95.0" text="Наименование:">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <TextField fx:id="description" maxWidth="-Infinity" prefHeight="25.0" prefWidth="170.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="BOTTOM_RIGHT">
               <children>
                  <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#okOnAction" text="ОК" underline="true">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#cancelOnAction" text="Отмена" />
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
