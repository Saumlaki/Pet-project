<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.saumlaki.time_tracker.controllers.DataOfTimeElementController">
   <children>
      <VBox>
         <children>
            <Label minHeight="25.0" text="Дата:">
               <VBox.margin>
                  <Insets bottom="5.0" right="5.0" />
               </VBox.margin>
            </Label>
            <Label minHeight="25.0" text="Тип времени">
               <VBox.margin>
                  <Insets bottom="5.0" right="5.0" />
               </VBox.margin>
            </Label>
            <Label minHeight="25.0" text="Время(сек)">
               <VBox.margin>
                  <Insets bottom="5.0" right="5.0" />
               </VBox.margin>
            </Label>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <DatePicker fx:id="calendar" minHeight="25.0" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </DatePicker>
            <ComboBox fx:id="time" minHeight="25.0" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </ComboBox>
            <TextField fx:id="values" minHeight="25.0"  prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="BOTTOM_RIGHT">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#okOnAction" text="ОК" underline="true">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button cancelButton="true" mnemonicParsing="false" onAction="#cancelOnAction" text="Отмена">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
