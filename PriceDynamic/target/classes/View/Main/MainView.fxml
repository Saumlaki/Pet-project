            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
      </HBox>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView prefWidth="600.0" HBox.hgrow="ALWAYS" />
            <VBox spacing="5.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <Label prefHeight="25.0" text="Период с">
