                  <MenuItem mnemonicParsing="false" text="Выход" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="shopAdd" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#shopOpenList" text="Магазин">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="productAdd" mnemonicParsing="false" text="Товар">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="priceAdd" mnemonicParsing="false" text="Цена">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
